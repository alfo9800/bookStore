<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" 
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	
	<!-- persistence-unit -> 지속성단위의 정보를 기술하는 태그 -->
	<persistence-unit name="persistence-unit" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider> <!-- 공급자 클래스 지정 -->
		<properties> <!-- 추가로 필요한 정보를 속성으로 기술 -->
			<property name="hibernate.diarect" value="${hibernate.dialect}" />
			<property name="hibernate.hbm2ddl.auto" value="${hibernate.hbm2ddl.auto}" />
			<property name="javax.persistence.jdbc.driver" value="${db.driver}" />
			<property name="javax.persistence.jdbc.url" value="${db.url}" />
			<property name="javax.persistence.jdbc.user" value="${db.user}" />
			<property name="javax.persistence.jdbc.password" value="${db.password}" />
		</properties>
	</persistence-unit>
</persistence>
<!-- 이 파일은 '지속성 단위'라고 하는 정보를 포함하고 있음 -->
<!-- JPA에서  데이터베이스 액세스를 실행하기 위하여 '지속성'이라는 것을 제공함. 즉, persistence.xml 안에는 액세스하는 데이터베이스에 대한 정보를 기술해 두는 것 -->